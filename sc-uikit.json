{
  "name": "sc-uikit",
  "bpm": "1.0.0", // this is the requirement for being a bpm package
  "summary": "SproutCore UI Kit",
  "author": "Pepe Cano",
  "version": "0.1",


  "directories": {
    "lib": "lib",
    "tests": "tests"
  },

  "dependencies": {
    "spade": ">= 0",
    "sproutcore-ui": "~> 2.0",
    "sproutcore-touch": "=> 0",
